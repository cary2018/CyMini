######## 官方扩展库 ########
#多应用模式扩展（安装后自动部署多应用）
composer require topthink/think-multi-app
#模板引擎依赖库
composer require topthink/think-view
#验证码扩展
composer require topthink/think-captcha
#文件上传扩展
composer require topthink/think-filesystem
######### 第三方扩展库  ########
#ip库扩展（用于获取ip所属区域）
composer require zoujingli/ip2region
#邮件发送扩展
composer require phpmailer/phpmailer
#workerman扩展
composer require workerman/phpsocket.io
#扩展插件 https://www.kancloud.cn/ymsxxx/wt-tp6/2787771
composer require zzstudio/think-addons
#扩展压缩、解压 zip（composer完成后，到https://github.com/chamilo/pclzip/blob/master/pclzip.lib.php，复制代码覆盖 pclzip.lib.php 确保最新（>=5421行））
composer require chamilo/pclzip














